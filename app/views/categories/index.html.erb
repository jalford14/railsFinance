<%= render '/transactions/header' %>

<div id="title">Categories</div>

<%= link_to 'Create New Category', new_category_path, :id=>"newCat"%>

<div id="category">
    <div class="type">CATEGORY</div>
    <div id="edit">EDIT</div>
    <div id="delete">DELETE</div>
</div>

<% @category.each do |category| %>
      <div id="category">
        <div class="type"><%= category.category.titleize  %></div>
        <div id="edit"><%= link_to image_tag("edit_icon.png"), edit_category_path(category) %></div>
        <div id="delete"><%= link_to image_tag("trash.png"), category_path(category),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></div>
      </div>
  <% end %>