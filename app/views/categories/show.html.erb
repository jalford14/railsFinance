<%= render '/transactions/header' %>

<% @transaction.each do |transaction| %>
    <%= link_to '', transaction_path(transaction) %>
      <div class="info <%= transaction.category %>">
        <div class="type">Type: <%= transaction.category.titleize  %></div>
        <div id="edit"><%= link_to image_tag("edit_icon.png"), edit_transaction_path(transaction) %></div>
        <div id="delete"><%= link_to image_tag("trash.png"), transaction_path(transaction),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></div>
      </div>
  <% end %>